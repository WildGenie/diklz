@model IEnumerable<App.Data.DTO.PRL.PrlAppListDTO>

<div class="content-list-wrapper font-sm" data-pgparams="@ViewBag.FormParamList">
    <div class="content-list content-list-header">
        <div class="content-list-edit"></div>
        <div class="content-list-item grid-container">
            <div class="grid" data-grid="1">
                <div class="grid-inner">
                    <p class="content-list-sortable">
                        @Html.DisplayNameFor(model => model.BackOfficeAppState)
                    </p>
                </div>
            </div>
            <div class="grid" data-grid="1">
                <div class="grid-inner">
                    <p class="content-list-sortable">
                        @Html.DisplayNameFor(model => model.RegDate)
                    </p>
                </div>
            </div>
            <div class="grid" data-grid="1">
                <div class="grid-inner">
                    <p class="content-list-sortable">
                        @Html.DisplayNameFor(model => model.AppSort)
                    </p>
                </div>
            </div>
            <div class="grid" data-grid="1">
                <div class="grid-inner">
                    <p class="content-list-sortable">
                        @Html.DisplayNameFor(model => model.OrderDate)
                    </p>
                </div>
            </div>
        </div>
    </div>

    @foreach (var item in Model)
    {
    <div class="content-list">
        <div class="content-list-edit">
            <a asp-area="Prl" asp-controller="Application" asp-action="Details" class="btn-link btn btn-icon btn-square icon-md icon-eye"
               asp-route-id="@item.Id"
               data-title="Перегляд"
               data-tooltipright='1'>
            </a>
        </div>
        <a class="content-list-link">
            <div class="content-list-item grid-container-nested">
                <div class="grid">
                    <div class="grid-inner">
                        <p class="col">
                            @if (item.DecisionTypeEnum == "Denied")
                            {
                            <i class="icon icon-xs icon-close mb-sm danger-font"></i>
                            }
                            else if (item.DecisionTypeEnum == "Accepted")
                            {
                            <i class="icon icon-sm icon-check mb-sm success-font"></i>
                            }
                            else if(item.DecisionTypeEnum == "WithoutConsideration")
                            {
                            <i class="icon icon-xs icon-close mb-sm" style="color: orange;"></i>
                            }
                            else
                            {
                            <i class="icon icon-sm icon-wait mb-sm info-font"></i>
                            }
                            @Html.DisplayFor(modelItem => item.BackOfficeAppState)
                        </p>
                    </div>
                </div>
                <div class="grid">
                    <div class="grid-inner">

                        <p>@Html.DisplayFor(modelItem => item.RegDateNumber)</p>
                    </div>
                </div>
                <div class="grid">
                    <div class="grid-inner">
                        <p>@Html.DisplayFor(modelItem => item.AppSort)</p>
                    </div>
                </div>
                <div class="grid">
                    <div class="grid-inner">
                        <p>@Html.DisplayFor(modelItem => item.OrderDateNumber)</p>
                    </div>
                </div>
            </div>
        </a>
    </div>
    }
</div>



