@using ReflectionIT.Mvc.Paging
@model ReflectionIT.Mvc.Paging.PagingList<App.Data.DTO.APP.ApplicationListDTO>
@addTagHelper *, ReflectionIT.Mvc.Paging

<div class="content-list-wrapper" data-pgparams="@ViewBag.FormParamList">
    <div class="content-list content-list-header">
        <div class="content-list-edit"></div>
        <div class="content-list-item grid-container">
            <div class="grid" data-grid="1">
                <div class="grid-inner">
                    <p class="content-list-sortable">
                        @Html.SortableHeaderFor(model => model.ModifiedOn)
                    </p>
                </div>
            </div>
            <div class="grid" data-grid="2">
                <div class="grid-inner">
                    <p class="content-list-sortable">
                        @Html.SortableHeaderFor(model => model.AppType)
                    </p>
                </div>
            </div>

            <div class="grid" data-grid="2">
                <div class="grid-inner">
                    <p class="content-list-sortable">
                        @Html.SortableHeaderFor(model => model.AppSort)
                    </p>
                </div>
            </div>
            <div class="grid" data-grid="1">
                <div class="grid-inner">
                    <p class="content-list-sortable">
                        @Html.SortableHeaderFor(model => model.AppState)
                    </p>
                </div>
            </div>
        </div>
        <div class="content-list-delete"></div>
    </div>

    @foreach (var item in Model)
    {
    <div class="content-list">
        <div class="content-list-edit">
            @switch (item.AppTypeEnum)
            {
                case "PRL":
                    <a asp-area="Prl" asp-controller="PrlApp" asp-action="Details" class="btn-link btn btn-icon btn-square icon-md icon-eye"
                       asp-route-id="@item.Id"
                       data-title="Перегляд"
                       data-tooltipright='1'>
                    </a>
                    break;
                case "IML":
                    <a asp-area="IML" asp-controller="ImlApp" asp-action="Details" class="btn-link btn btn-icon btn-square icon-md icon-eye"
                       asp-route-id="@item.Id"
                       data-title="Перегляд"
                       data-tooltipright='1'>
                    </a>
                    break;
                case "TRL":
                    <a asp-area="Trl" asp-controller="TrlApp" asp-action="Details" class="btn-link btn btn-icon btn-square icon-md icon-eye"
                       asp-route-id="@item.Id"
                       data-title="Перегляд"
                       data-tooltipright='1'>
                    </a>
                    break;
                default:
                    break;
            }
        </div>
        <a class="content-list-link">
            <div class="content-list-item grid-container-nested">
                <div class="grid">
                    <div class="grid-inner">
                        <p>
                            @Html.DisplayFor(modelItem => item.ModifiedOn)
                        </p>
                    </div>
                </div>
                <div class="grid">
                    <div class="grid-inner">
                        <p>@Html.DisplayFor(modelItem => item.AppType)</p>
                    </div>
                </div>
                <div class="grid">
                    <div class="grid-inner">
                        <p>@Html.DisplayFor(modelItem => item.AppSort)</p>
                    </div>
                </div>
                <div class="grid">
                    <div class="grid-inner">
                        <p>@Html.DisplayFor(modelItem => item.AppState)</p>
                    </div>
                </div>
            </div>
        </a>

        <div class="content-list-delete">
            @switch (item.AppTypeEnum)
            {
                case "PRL":
                    <a asp-area="Prl" asp-controller="PrlAppAlt" asp-action="Delete"
                       asp-route-id="@item.Id"
                       class="btn btn-icon btn-square icon-md icon-remove">
                    </a>
                    break;
                case "IML":
                    <a asp-area="Iml" asp-controller="ImlAppAlt" asp-action="Delete"
                       asp-route-id="@item.Id"
                       class="btn btn-icon btn-square icon-md icon-remove">
                    </a>
                    break;
                case "TRL":
                    <a asp-area="TRL" asp-controller="TrlApp" asp-action="Delete"
                       asp-route-id="@item.Id"
                       class="btn btn-icon btn-square icon-md icon-remove">
                    </a>
                    break;
                default:
                    break;
            }
            @*<a asp-area="Prl" asp-controller="PrlAppAlt" asp-action="Delete"
           asp-route-id="@item.Id"
           class="btn btn-icon btn-square icon-md icon-remove">
        </a>*@
        </div>
    </div>
    }

</div>

<nav>
    <vc:pager paging-list="@Model" />
</nav>
