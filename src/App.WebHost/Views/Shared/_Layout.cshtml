<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700&amp;subset=cyrillic" rel="stylesheet" />

    <title>
        Держлікслужба @ViewData["Title"]
    </title>

    <link href="~/stylesheets/main.css" rel="stylesheet" />
    <script src="~/javascripts/vendor.min.js" asp-append-version="true"></script>


    @RenderSection("Reports", required: false)
</head>
<body>
    <!-- <body class = "collapsed"> -->
    <span id="is-screen-mobile" class="screen-marker"></span>
    <span id="is-screen-mobile-big" class="screen-marker"></span>
    <span id="is-screen-tablet" class="screen-marker"></span>
    <span id="is-screen-tablet-big" class="screen-marker"></span>
    <span id="is-screen-desktop" class="screen-marker"></span>

    <!--header-->
    <div id="header-wrapper" class="header-wrapper">
        <partial name="_Header" />
    </div>

    <!--aside switcher hamburger

    <div id="aside-switcher" class="aside-switcher active-after">
        <span class="aside-switcher-inner"></span>
        <span class="aside-switcher-inner"></span>
        <span class="aside-switcher-inner"></span>
    </div>
     -->
    <!--aside wrapper-->
    <div id="aside-wrapper" class="aside-wrapper">
        <partial name="_Sidebar" />
    </div>

    <!--main wrapper-->
    @*<div rights id="wrapper" class="wrapper wrapper-column">*@
    <div id="wrapper" class="wrapper wrapper-column">
        <div class="wrapper-content">

            <!--bread crumbs and nav links-->
            <div class="bread-crumbs-wrapper">
                <!--
                <a href="#" onclick="window.history.go(-1)" class="btn-back" title="Назад">
                    <i class="icon icon-svg">
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 489.8 489.8"><path d="M489.8 244.9c0-9.5-7.7-17.1-17.1-17.1H160.4l77.6-77.6c6.7-6.7 6.7-17.6 0-24.3s-17.6-6.7-24.3 0L106.9 232.8c-6.7 6.7-6.7 17.6 0 24.3l106.8 106.8c3.3 3.3 7.7 5 12.1 5s8.8-1.7 12.1-5c6.7-6.7 6.7-17.6 0-24.3L160.3 262h312.3c9.5 0 17.2-7.6 17.2-17.1zM34.3 438.7V51.1c0-9.5-7.7-17.1-17.1-17.1C7.7 34 0 41.7 0 51.1v387.6c0 9.5 7.7 17.1 17.2 17.1 9.4 0 17.1-7.6 17.1-17.1z" /></svg>
                    </i>
                </a>
                -->
                <div class="content-top-hiper">
                    @RenderSection("HiperLinks", required: false)
                </div>

                <ul id="bread-crumbs" class="bread-crumbs"></ul>

            </div>

            <!-- content-top heading -->
            <div class="content-top">
                <h1>
                    @ViewData["Title"]
                </h1>
            </div>

            <!--content wrapper-->
            <div id="content-wrapper" class="content-wrapper col">
                <!-- content-tab switcher on partials -->
                <div class="content-switcher content-switcher-row col-lg-12" id="content-switcher"></div>

                <!--content-->
                <div id="content" class="content">

                    <!--content action button-->
                    <div id="content-btn" class="content-btn">
                        @RenderSection("Buttons", required: false)
                    </div>

                    @RenderBody()
                </div>
            </div>
        </div>
    </div>

    @if (IsSectionDefined("HiperLinks"))
    {
        IgnoreSection("HiperLinks");
    }
    @if (IsSectionDefined("Buttons"))
    {
        IgnoreSection("Buttons");
    }


    <!--scroll top button-->
    <button id="scroll-top" class="btn btn-fill btn-round btn-secondary hidden" type="button">
        <i class="icon-sm icon-arrow-left"></i>
    </button>
    <!-- modal-wrapper -->
    <div id="modal">
        <div class="modal-wrapper">
            <div id="modal-close" class="modal-close icon icon-close"></div>
            <div class="modal-container"></div>
        </div>
    </div>

    <!-- dialog-wrapper -->
    <div id="dialog-wrapper" class="dialog-wrapper">
        <div id="dialog-inner" class="dialog-inner">
            <div id="dialog-text" class="dialog-text"></div>
            <div id="dialog-btn" class="btn-holder"></div>
        </div>
    </div>

    <!--footer-->
    <div id="footer-wrapper" class="footer-wrapper">
        <partial name="_Footer" />
    </div>

        <script>
            var breadCrumbCookie = 'Current_Lims_BreadCrumb_Key';
        </script>

    <script src="~/javascripts/main.js" asp-append-version="false"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
